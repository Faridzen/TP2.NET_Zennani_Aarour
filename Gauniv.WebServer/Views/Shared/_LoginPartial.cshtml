@using Gauniv.WebServer.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav align-items-center">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Gérer le profil">
            <i class="bi bi-person-circle me-1"></i> @User.Identity?.Name
        </a>
    </li>
    <li class="nav-item ms-lg-2">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="game-btn" style="padding: 0.4rem 1rem; font-size: 0.8rem; background: rgba(239, 68, 68, 0.1); color: #ef4444; border: 1px solid rgba(239, 68, 68, 0.2);">
                <i class="bi bi-box-arrow-right"></i>
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">S'inscrire</a>
    </li>
    <li class="nav-item ms-lg-2">
        <a class="game-btn" asp-area="Identity" asp-page="/Account/Login" style="padding: 0.5rem 1.2rem;">Connexion</a>
    </li>
}
</ul>
