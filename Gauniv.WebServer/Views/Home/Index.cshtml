@model List<Gauniv.WebServer.Data.Game>
@{
    ViewData["Title"] = "Catalogue des Jeux";
}

<div class="hero-section">
    <h1 class="hero-title">Explorez l'Univers Gauniv</h1>
    <p class="hero-subtitle">Plongez dans notre collection de jeux d'exception. Téléchargez, lancez et jouez sans limites.</p>
</div>

@if (Model == null || !Model.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-controller display-1 text-muted opacity-25"></i>
        <h3 class="mt-3 text-muted">Aucun jeu disponible pour le moment.</h3>
        <p class="text-muted">Revenez plus tard pour voir nos nouvelles sorties !</p>
    </div>
}
else
{
    <div class="game-grid">
        @foreach (var local_game in Model)
        {
            <div class="game-card">
                <div class="game-card-img-wrapper">
                    @if (!string.IsNullOrEmpty(local_game.ImageUrl))
                    {
                        <img src="@local_game.ImageUrl" class="game-card-img" alt="@local_game.Title">
                    }
                    else
                    {
                        <div class="game-card-img d-flex align-items-center justify-content-center bg-dark text-muted">
                            <i class="bi bi-joystick display-4"></i>
                        </div>
                    }
                </div>
                <div class="game-card-content">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h2 class="game-title">@local_game.Title</h2>
                        <span class="game-price">@(local_game.Price == 0 ? "Gratuit" : local_game.Price.ToString("C"))</span>
                    </div>
                    
                    <p class="game-description">@local_game.Description</p>
                    
                    <div class="mt-2 mb-3">
                        @foreach (var local_cat in local_game.Categories)
                        {
                            <span class="badge rounded-pill bg-secondary opacity-75 me-1" style="font-size: 0.65rem;">@local_cat</span>
                        }
                    </div>

                    <div class="game-metadata">
                        <a asp-action="Details" asp-route-id="@local_game.Id" class="game-btn flex-grow-1 text-center">
                            Détails <i class="bi bi-arrow-right-short"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
