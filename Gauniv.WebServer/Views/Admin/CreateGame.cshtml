@model Gauniv.WebServer.Data.Game
@{
    ViewData["Title"] = "Ajouter un jeu";
    var local_availableCategories = ViewBag.AvailableCategories as List<Gauniv.WebServer.Data.Category>;
}

<div class="row justify-content-center py-5">
    <div class="col-lg-8">
        <a asp-action="Index" class="text-decoration-none text-muted mb-4 d-inline-block hover-translate-x">
            <i class="bi bi-chevron-left me-1"></i> Retour à l'administration
        </a>

        <div class="form-gauniv">
            <h1 class="mb-4 display-5 fw-bold">Nouveau Jeu</h1>
            
            <form asp-action="CreateGame" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-4">
                    <!-- Basic Info -->
                    <div class="col-md-6 text-start">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label text-muted fw-bold">Titre</label>
                            <input asp-for="Title" class="form-control form-control-gauniv" placeholder="Ex: Cyber Odyssey" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6 text-start">
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label text-muted fw-bold">Prix (en €)</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control form-control-gauniv" placeholder="0.00" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12 text-start">
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label text-muted fw-bold">Description</label>
                            <textarea asp-for="Description" class="form-control form-control-gauniv" rows="4" placeholder="Description captivante du jeu..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Images & Files -->
                    <div class="col-12 text-start">
                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label text-muted fw-bold">URL de l'image</label>
                            <input asp-for="ImageUrl" class="form-control form-control-gauniv" placeholder="https://example.com/image.jpg" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12 text-start">
                        <div class="mb-3">
                            <label class="form-label text-muted fw-bold">Exécutable (.exe)</label>
                            <input type="file" name="executable" class="form-control form-control-gauniv" accept=".exe" />
                            <div class="form-text text-muted mt-2">
                                <i class="bi bi-info-circle me-1"></i> Si laissé vide, le jeu utilisera l'exécutable partagé (Smart Launcher).
                            </div>
                        </div>
                    </div>

                    <!-- Categories -->
                    <div class="col-12 text-start">
                        <label class="form-label text-muted fw-bold mb-3">Catégories</label>
                        <div class="p-3 border border-secondary border-opacity-25 rounded-3 bg-opacity-10 bg-white">
                            <input type="hidden" id="categoriesInput" name="categoriesCsv" />
                            
                            <div class="d-flex flex-wrap gap-2" id="categorySelection">
                                @if (local_availableCategories != null)
                                {
                                    @foreach (var local_cat in local_availableCategories)
                                    {
                                        <div class="form-check form-check-inline m-0">
                                            <input class="btn-check category-check" type="checkbox" id="cat_@local_cat.Id" value="@local_cat.Name" autocomplete="off">
                                            <label class="btn btn-outline-light btn-sm rounded-pill opacity-75" for="cat_@local_cat.Id">@local_cat.Name</label>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>

                    <div class="col-12 mt-5">
                        <button type="submit" class="game-btn w-100 py-3 fs-4">
                            <i class="bi bi-rocket-takeoff me-2"></i> Publier le jeu
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const checks = document.querySelectorAll('.category-check');
        const input = document.getElementById('categoriesInput');

        function updateCategories() {
            const selected = Array.from(checks)
                .filter(c => c.checked)
                .map(c => c.value);
            input.value = selected.join(',');
        }

        checks.forEach(c => c.addEventListener('change', updateCategories));
    });
</script>

<style>
    .hover-translate-x { transition: var(--transition); }
    .hover-translate-x:hover { transform: translateX(-5px); color: var(--text-main) !important; }
    
    .btn-check:checked + .btn-outline-light {
        background-color: var(--primary);
        border-color: var(--primary);
        color: white;
        opacity: 1;
    }
</style>
