@page
@model IndexModel
@{
    ViewData["Title"] = "Mon Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="row justify-content-center py-4">
    <div class="col-lg-8">
        <div class="form-gauniv">
            <h1 class="mb-2 display-5 fw-bold">Mon Profil</h1>
            <p class="text-muted mb-4">Gérez vos informations personnelles</p>
            
            <partial name="_StatusMessage" for="StatusMessage" />
            
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>
                
                <div class="row g-4">
                    <!-- Username (disabled) -->
                    <div class="col-12">
                        <label asp-for="Username" class="form-label text-muted fw-bold">
                            <i class="bi bi-person-badge me-2"></i>Nom d'utilisateur
                        </label>
                        <input asp-for="Username" class="form-control form-control-gauniv" disabled />
                        <small class="text-muted">Le nom d'utilisateur ne peut pas être modifié</small>
                    </div>

                    <!-- First Name -->
                    <div class="col-md-6">
                        <label asp-for="Input.FirstName" class="form-label text-muted fw-bold">
                            <i class="bi bi-person me-2"></i>Prénom
                        </label>
                        <input asp-for="Input.FirstName" class="form-control form-control-gauniv" placeholder="Votre prénom" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>

                    <!-- Last Name -->
                    <div class="col-md-6">
                        <label asp-for="Input.LastName" class="form-label text-muted fw-bold">
                            <i class="bi bi-person me-2"></i>Nom
                        </label>
                        <input asp-for="Input.LastName" class="form-control form-control-gauniv" placeholder="Votre nom" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>

                    <!-- Phone Number -->
                    <div class="col-12">
                        <label asp-for="Input.PhoneNumber" class="form-label text-muted fw-bold">
                            <i class="bi bi-telephone me-2"></i>Numéro de téléphone
                        </label>
                        <input asp-for="Input.PhoneNumber" class="form-control form-control-gauniv" placeholder="+33 6 12 34 56 78"/>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>

                    <!-- Save Button -->
                    <div class="col-12 mt-5">
                        <button id="update-profile-button" type="submit" class="game-btn w-100 py-3 fs-4">
                            <i class="bi bi-check-lg me-2"></i> Enregistrer les modifications
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
