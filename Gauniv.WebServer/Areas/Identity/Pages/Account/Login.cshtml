@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<h1>@ViewData["Title"]</h1>
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="form-gauniv">
            <h2 class="text-center mb-4">Se connecter</h2>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control form-control-gauniv" autocomplete="username" aria-required="true" placeholder="admin ou user" />
                    <label asp-for="Input.Email" class="text-muted">Identifiant (Pseudo ou Email)</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control form-control-gauniv" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="text-muted">Mot de passe</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                
                <div class="checkbox mb-3 p-1">
                    <label asp-for="Input.RememberMe" class="form-label text-muted d-flex align-items-center gap-2">
                        <input class="form-check-input" asp-for="Input.RememberMe" style="width: 1.2rem; height: 1.2rem;" />
                        Se souvenir de moi
                    </label>
                </div>
                
                <button id="login-submit" type="submit" class="w-100 game-btn py-3 fs-3">Connexion</button>
            </form>
            
            <div class="mt-4 text-center">
                <p class="mb-2"><a id="forgot-password" asp-page="./ForgotPassword" class="text-muted text-decoration-none">Mot de passe oublié ?</a></p>
                <p class="mb-0 text-muted">Pas encore de compte ? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-white text-decoration-none fw-bold">Créer un compte</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
