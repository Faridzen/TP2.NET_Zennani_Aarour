<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Gauniv.Client.ViewModel"
             x:Class="Gauniv.Client.Pages.Profile"
             Title="Profil"
             x:DataType="vm:ProfileViewModel"
             BackgroundColor="#1b2838">

    <ScrollView>
        <VerticalStackLayout Padding="20,30" Spacing="25">
            
            <!-- Header -->
            <Grid BackgroundColor="#171a21"
                  Padding="20,15"
                  Margin="-20,-30,-20,0">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Mon Profil"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="#c7d5e0"/>
                    
                    <Label Text="{Binding StatusMessage}"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#8f98a0"/>
                </VerticalStackLayout>
            </Grid>

            <!-- Login Form -->
            <VerticalStackLayout Spacing="15" 
                                Margin="0,20,0,0"
                                IsVisible="{Binding IsConnected, Converter={StaticResource InvertedBoolConverter}}">
                
                <Frame Padding="20"
                       CornerRadius="4"
                       HasShadow="False"
                       BackgroundColor="#16202d"
                       BorderColor="Transparent"
                       IsVisible="{Binding ShowRegisterForm, Converter={StaticResource InvertedBoolConverter}}">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Connexion"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#c7d5e0"/>
                        
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Email ou Username"
                                   FontSize="14"
                                   TextColor="#8f98a0"/>
                            <Entry Text="{Binding Email}"
                                   Placeholder="Votre email ou username"
                                   Keyboard="Email"
                                   FontSize="16"
                                   BackgroundColor="#1b2838"
                                   TextColor="#c7d5e0"
                                   PlaceholderColor="#8f98a0"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Mot de passe"
                                   FontSize="14"
                                   TextColor="#8f98a0"/>
                            <Entry Text="{Binding Password}"
                                   Placeholder="Votre mot de passe"
                                   IsPassword="True"
                                   FontSize="16"
                                   BackgroundColor="#1b2838"
                                   TextColor="#c7d5e0"
                                   PlaceholderColor="#8f98a0"/>
                        </VerticalStackLayout>

                        <Button Text="Se connecter"
                                Command="{Binding LoginCommand}"
                                BackgroundColor="#5c7e10"
                                TextColor="White"
                                FontAttributes="Bold"
                                FontSize="16"
                                CornerRadius="3"
                                HeightRequest="50"
                                Margin="0,10,0,0"/>
                        
                        <Button Text="Créer un compte"
                                Command="{Binding ToggleRegisterFormCommand}"
                                BackgroundColor="#2a475e"
                                TextColor="White"
                                FontSize="14"
                                CornerRadius="3"
                                HeightRequest="40"/>
                        
                        <ActivityIndicator IsRunning="{Binding IsLoading}"
                                          IsVisible="{Binding IsLoading}"
                                          Color="#66c0f4"
                                          HeightRequest="40"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Register Form -->
                <Frame Padding="20"
                       CornerRadius="4"
                       HasShadow="False"
                       BackgroundColor="#16202d"
                       BorderColor="Transparent"
                       IsVisible="{Binding ShowRegisterForm}">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Créer un compte"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#c7d5e0"/>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Prénom"
                                   FontSize="14"
                                   TextColor="#8f98a0"/>
                            <Entry Text="{Binding FirstName}"
                                   Placeholder="Votre prénom"
                                   FontSize="16"
                                   BackgroundColor="#1b2838"
                                   TextColor="#c7d5e0"
                                   PlaceholderColor="#8f98a0"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Nom"
                                   FontSize="14"
                                   TextColor="#8f98a0"/>
                            <Entry Text="{Binding LastName}"
                                   Placeholder="Votre nom"
                                   FontSize="16"
                                   BackgroundColor="#1b2838"
                                   TextColor="#c7d5e0"
                                   PlaceholderColor="#8f98a0"/>
                        </VerticalStackLayout>
                        
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Email"
                                   FontSize="14"
                                   TextColor="#8f98a0"/>
                            <Entry Text="{Binding Email}"
                                   Placeholder="Votre email"
                                   Keyboard="Email"
                                   FontSize="16"
                                   BackgroundColor="#1b2838"
                                   TextColor="#c7d5e0"
                                   PlaceholderColor="#8f98a0"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Mot de passe"
                                   FontSize="14"
                                   TextColor="#8f98a0"/>
                            <Entry Text="{Binding Password}"
                                   Placeholder="Votre mot de passe"
                                   IsPassword="True"
                                   FontSize="16"
                                   BackgroundColor="#1b2838"
                                   TextColor="#c7d5e0"
                                   PlaceholderColor="#8f98a0"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Confirmer le mot de passe"
                                   FontSize="14"
                                   TextColor="#8f98a0"/>
                            <Entry Text="{Binding ConfirmPassword}"
                                   Placeholder="Confirmez votre mot de passe"
                                   IsPassword="True"
                                   FontSize="16"
                                   BackgroundColor="#1b2838"
                                   TextColor="#c7d5e0"
                                   PlaceholderColor="#8f98a0"/>
                        </VerticalStackLayout>

                        <Button Text="Créer le compte"
                                Command="{Binding RegisterCommand}"
                                BackgroundColor="#5c7e10"
                                TextColor="White"
                                FontAttributes="Bold"
                                FontSize="16"
                                CornerRadius="3"
                                HeightRequest="50"
                                Margin="0,10,0,0"/>
                        
                        <Button Text="Retour à la connexion"
                                Command="{Binding ToggleRegisterFormCommand}"
                                BackgroundColor="#2a475e"
                                TextColor="White"
                                FontSize="14"
                                CornerRadius="3"
                                HeightRequest="40"/>
                        
                        <ActivityIndicator IsRunning="{Binding IsLoading}"
                                          IsVisible="{Binding IsLoading}"
                                          Color="#66c0f4"
                                          HeightRequest="40"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>

            <!-- Profile Management (when connected) -->
            <VerticalStackLayout Spacing="15" 
                                Margin="0,20,0,0"
                                IsVisible="{Binding IsConnected}">
                
                <Frame Padding="20"
                       CornerRadius="4"
                       HasShadow="False"
                       BackgroundColor="#16202d"
                       BorderColor="Transparent">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Informations du compte"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#c7d5e0"/>
                        
                        <Frame Padding="15"
                               CornerRadius="3"
                               HasShadow="False"
                               BackgroundColor="#1b2838"
                               BorderColor="#66c0f4">
                            <VerticalStackLayout Spacing="10">
                                <Label Text="{Binding Email}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#c7d5e0"/>
                                <Label Text="✅ Connecté"
                                       FontSize="13"
                                       TextColor="#beee11"/>
                            </VerticalStackLayout>
                        </Frame>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Prénom"
                                   FontSize="14"
                                   TextColor="#8f98a0"/>
                            <Entry Text="{Binding FirstName}"
                                   Placeholder="Votre prénom"
                                   FontSize="16"
                                   BackgroundColor="#1b2838"
                                   TextColor="#c7d5e0"
                                   PlaceholderColor="#8f98a0"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Nom"
                                   FontSize="14"
                                   TextColor="#8f98a0"/>
                            <Entry Text="{Binding LastName}"
                                   Placeholder="Votre nom"
                                   FontSize="16"
                                   BackgroundColor="#1b2838"
                                   TextColor="#c7d5e0"
                                   PlaceholderColor="#8f98a0"/>
                        </VerticalStackLayout>

                        <Button Text="Mettre à jour le profil"
                                Command="{Binding UpdateProfileCommand}"
                                BackgroundColor="#66c0f4"
                                TextColor="White"
                                FontAttributes="Bold"
                                FontSize="16"
                                CornerRadius="3"
                                HeightRequest="50"
                                Margin="0,10,0,0"/>

                        <Button Text="Accéder au Panneau Admin"
                                Command="{Binding GoToAdminCommand}"
                                IsVisible="{Binding IsAdmin}"
                                BackgroundColor="#2a475e"
                                TextColor="White"
                                FontAttributes="Bold"
                                FontSize="16"
                                CornerRadius="3"
                                HeightRequest="50"
                                Margin="0,10,0,0"/>

                        <Button Text="Se déconnecter"
                                Command="{Binding LogoutCommand}"
                                BackgroundColor="#c33"
                                TextColor="White"
                                FontAttributes="Bold"
                                FontSize="16"
                                CornerRadius="3"
                                HeightRequest="50"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>