<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Gauniv.Client.ViewModel"
             xmlns:dto="clr-namespace:Gauniv.Client.Dtos"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Gauniv.Client.Pages.Index"
             Title="Catalogue de Jeux"
             x:DataType="vm:IndexViewModel"
             BackgroundColor="#1b2838">

    <Grid ColumnDefinitions="280,*">
        
        <!-- Panneau de filtres à gauche -->
        <ScrollView Grid.Column="0" BackgroundColor="#0d1117" Padding="15">
            <VerticalStackLayout Spacing="20">
                
                <!-- Titre Filtres -->
                <Label Text="FILTRES"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="{StaticResource TextMuted}"
                       Margin="0,10,0,0"
                       CharacterSpacing="2"/>

                <!-- Recherche -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Rechercher"
                           FontSize="12"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextMuted}"/>
                    <Border Style="{StaticResource GlassCard}" Padding="0" StrokeShape="RoundRectangle 8">
                        <SearchBar Placeholder="Titre du jeu..."
                                  Text="{Binding SearchText}"
                                  PlaceholderColor="{StaticResource TextMuted}"
                                  TextColor="White"
                                  BackgroundColor="Transparent"
                                  CancelButtonColor="{StaticResource Primary}"/>
                    </Border>
                </VerticalStackLayout>

                <!-- Séparateur -->
                <BoxView HeightRequest="1" BackgroundColor="#2a475e"/>

                <!-- Catégories -->
                <toolkit:Expander IsExpanded="True">
                    <toolkit:Expander.Header>
                        <Grid ColumnDefinitions="*,Auto" Padding="0,5">
                            <Label Text="Catégories"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#8f98a0"
                                   VerticalOptions="Center"/>
                            <Label Grid.Column="1" 
                                   Text="▼" 
                                   TextColor="#8f98a0"
                                   VerticalOptions="Center">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" 
                                                 Binding="{Binding Source={RelativeSource AncestorType={x:Type toolkit:Expander}}, Path=IsExpanded}" 
                                                 Value="True">
                                        <Setter Property="Text" Value="▲"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                        </Grid>
                    </toolkit:Expander.Header>
                    <toolkit:Expander.Content>
                        <CollectionView ItemsSource="{Binding CategoryItems}"
                                        SelectionMode="None"
                                        Margin="0,10,0,0">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="vm:CategoryItem">
                                    <Grid ColumnDefinitions="Auto,*" Padding="5,2">
                                        <CheckBox IsChecked="{Binding IsSelected}"
                                                  Color="#66c0f4"/>
                                        <Label Grid.Column="1"
                                               Text="{Binding Name}"
                                               TextColor="#c7d5e0"
                                               FontSize="13"
                                               VerticalOptions="Center"
                                               Margin="5,0,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </toolkit:Expander.Content>
                </toolkit:Expander>

                <!-- Séparateur -->
                <BoxView HeightRequest="1" BackgroundColor="#2a475e"/>

                <!-- Prix -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Prix"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#8f98a0"/>
                    
                    <VerticalStackLayout Spacing="5">
                        <Label Text="{Binding MinPrice, StringFormat='Min: {0:C}'}"
                               FontSize="12"
                               TextColor="#66c0f4"/>
                        <Slider Minimum="0"
                               Maximum="100"
                               Value="{Binding MinPriceSlider}"
                               MinimumTrackColor="#66c0f4"
                               MaximumTrackColor="#2a475e"
                               ThumbColor="#66c0f4"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="{Binding MaxPrice, StringFormat='Max: {0:C}'}"
                               FontSize="12"
                               TextColor="#66c0f4"/>
                        <Slider Minimum="0"
                               Maximum="100"
                               Value="{Binding MaxPriceSlider}"
                               MinimumTrackColor="#66c0f4"
                               MaximumTrackColor="#2a475e"
                               ThumbColor="#66c0f4"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>

                <!-- Séparateur -->
                <BoxView HeightRequest="1" BackgroundColor="#2a475e"/>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Contenu principal -->
        <Grid Grid.Column="1" RowDefinitions="Auto,Auto,*">
            
            <!-- Bannière Moderne -->
            <Grid Grid.Row="0" HeightRequest="180" Margin="0,0,0,10">
                <Border StrokeThickness="0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#0a0c10" Offset="0.1" />
                            <GradientStop Color="#1e1b4b" Offset="0.6" />
                            <GradientStop Color="#0a0c10" Offset="1.0" />
                        </LinearGradientBrush>
                    </Border.Background>
                    
                    <Grid>
                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="5">
                            <Label Text="GAUNIV"
                                   FontSize="48"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   CharacterSpacing="8">
                            </Label>
                            
                            <BoxView HeightRequest="2" 
                                     WidthRequest="60" 
                                     Color="{StaticResource Primary}" 
                                     HorizontalOptions="Center" />
                            
                            <Label Text="DÉCOUVREZ L'EXCELLENCE DU JEU"
                                   FontSize="11"
                                   TextColor="{StaticResource TextMuted}"
                                   HorizontalOptions="Center"
                                   CharacterSpacing="3"
                                   Margin="0,5,0,0"/>
                        </VerticalStackLayout>
                    </Grid>
                </Border>
            </Grid>

            <!-- Status message -->
            <Label Grid.Row="1"
                   Text="{Binding StatusMessage}"
                   TextColor="#8f98a0"
                   FontSize="13"
                   Padding="20,10"
                   IsVisible="{Binding StatusMessage, Converter={StaticResource IsNotNullConverter}}"/>

            <!-- Grille des jeux avec Infinite Scroll -->
            <CollectionView Grid.Row="2"
                           ItemsSource="{Binding Games}"
                           SelectionMode="None"
                           Margin="15,10"
                           RemainingItemsThreshold="15"
                           RemainingItemsThresholdReachedCommand="{Binding LoadMoreGamesCommand}"
                           VerticalOptions="Fill"
                           HorizontalOptions="Fill">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" 
                                     Span="3" 
                                     HorizontalItemSpacing="15" 
                                     VerticalItemSpacing="20"/>
                </CollectionView.ItemsLayout>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="dto:GameDto">
                        <Border Style="{StaticResource GlassCard}"
                                HeightRequest="380">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:IndexViewModel}}, Path=ViewGameDetailsCommand}"
                                    CommandParameter="{Binding .}"/>
                            </Border.GestureRecognizers>
                            
                            <Grid RowDefinitions="180,*,Auto">
                                
                                <!-- Image du jeu -->
                                <Border Grid.Row="0"
                                      Padding="0"
                                      StrokeThickness="0"
                                      StrokeShape="RoundRectangle 12,12,0,0">
                                    <Image Source="{Binding ImageUrl}"
                                          Aspect="AspectFill"/>
                                </Border>
                                
                                <!-- Info du jeu -->
                                <VerticalStackLayout Grid.Row="1" Padding="12" Spacing="8">
                                    <Label Text="{Binding Title}"
                                          FontSize="18"
                                          FontAttributes="Bold"
                                          TextColor="White"
                                          LineBreakMode="TailTruncation"/>
                                    
                                    <FlexLayout BindableLayout.ItemsSource="{Binding Categories}"
                                               Wrap="Wrap">
                                        <BindableLayout.ItemTemplate>
                                            <DataTemplate x:DataType="x:String">
                                                <Border Background="#1Affffff" Padding="8,2" Margin="0,0,4,4" StrokeThickness="0" StrokeShape="RoundRectangle 8">
                                                    <Label Text="{Binding .}"
                                                           FontSize="10"
                                                           TextColor="{StaticResource Primary}"/>
                                                </Border>
                                            </DataTemplate>
                                        </BindableLayout.ItemTemplate>
                                    </FlexLayout>
                                </VerticalStackLayout>
                                
                                <!-- Footer -->
                                <Grid Grid.Row="2" 
                                      Padding="12,10" 
                                      ColumnDefinitions="*,Auto">
                                    
                                    <Label Grid.Column="0"
                                          Text="{Binding Price, StringFormat='{0:C}'}"
                                          FontSize="18"
                                          FontAttributes="Bold"
                                          TextColor="{StaticResource Accent}"
                                          VerticalOptions="Center">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label" Binding="{Binding IsOwned}" Value="True">
                                                <Setter Property="IsVisible" Value="False"/>
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>
                                    
                                    <Border Grid.Column="0" Background="{StaticResource AccentBrush}" Padding="8,4" StrokeThickness="0" StrokeShape="RoundRectangle 4" IsVisible="False" HorizontalOptions="Start">
                                        <Label Text="ACQUIS" FontSize="10" FontAttributes="Bold" TextColor="Black"/>
                                        <Border.Triggers>
                                            <DataTrigger TargetType="Border" Binding="{Binding IsOwned}" Value="True">
                                                <Setter Property="IsVisible" Value="True"/>
                                            </DataTrigger>
                                        </Border.Triggers>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Overlay de chargement pour ne pas casser le layout de la grille -->
            <ActivityIndicator Grid.Row="2"
                               IsRunning="{Binding IsLoading}"
                               IsVisible="{Binding IsLoading}"
                               Color="#66c0f4"
                               HeightRequest="60"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               ZIndex="1"/>

        </Grid>
    </Grid>
</ContentPage>