<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Gauniv.Client.ViewModel"
             xmlns:dto="clr-namespace:Gauniv.Client.Dtos"
             x:Class="Gauniv.Client.Pages.Index"
             Title="Catalogue"
             x:DataType="vm:IndexViewModel"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,Auto,*" Padding="0">
        
        <!-- Header -->
        <Grid Grid.Row="0" Padding="20,30,20,20" BackgroundColor="White">
            <VerticalStackLayout Spacing="10">
                <Label Text="Catalogue de Jeux"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="#1A202C"
                       HorizontalOptions="Start"/>
                
                <Label Text="{Binding StatusMessage}"
                       FontSize="14"
                       TextColor="#718096"
                       HorizontalOptions="Start"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Bouton -->
        <Button Grid.Row="1"
                Text="Charger tous les jeux"
                Command="{Binding LoadGamesCommand}"
                BackgroundColor="#4299E1"
                TextColor="White"
                FontAttributes="Bold"
                FontSize="16"
                CornerRadius="12"
                HeightRequest="50"
                Margin="20,0,20,15"/>
        
        <ActivityIndicator Grid.Row="1"
                          IsRunning="{Binding IsLoading}"
                          IsVisible="{Binding IsLoading}"
                          Color="#4299E1"
                          HeightRequest="40"
                          VerticalOptions="Center"
                          Margin="0,60,0,0"/>

        <!-- Liste -->
        <ScrollView Grid.Row="2" Padding="15,0,15,20">
            <CollectionView ItemsSource="{Binding Games}"
                           SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="15"/>
                </CollectionView.ItemsLayout>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="dto:GameDto">
                        <Frame Padding="0"
                               CornerRadius="16"
                               HasShadow="False"
                               BorderColor="#E2E8F0"
                               BackgroundColor="White">
                            <Frame.Shadow>
                                <Shadow Brush="Black" Opacity="0.08" Radius="12" Offset="0,2"/>
                            </Frame.Shadow>
                            
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto" 
                                  Padding="20">
                                
                                <Label Grid.Row="0"
                                       Text="{Binding Title}"
                                       FontSize="22"
                                       FontAttributes="Bold"
                                       TextColor="#1A202C"
                                       Margin="0,0,0,8"/>
                                
                                <Label Grid.Row="1"
                                       Text="{Binding Description}"
                                       FontSize="14"
                                       TextColor="#4A5568"
                                       LineBreakMode="WordWrap"
                                       MaxLines="2"
                                       Margin="0,0,0,15"/>
                                
                                <Label Grid.Row="2"
                                       Text="{Binding Price, StringFormat='{0:C}'}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#48BB78"
                                       Margin="0,0,0,15"/>
                                
                                <Button Grid.Row="3"
                                        Text="Acheter ce jeu"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:IndexViewModel}}, Path=PurchaseGameCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#4299E1"
                                        TextColor="White"
                                        FontAttributes="Bold"
                                        FontSize="16"
                                        CornerRadius="12"
                                        HeightRequest="48"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center" 
                                        VerticalOptions="Center"
                                        Padding="40">
                        <Label Text="ðŸŽ®"
                               FontSize="60"
                               HorizontalOptions="Center"
                               Margin="0,0,0,20"/>
                        <Label Text="Aucun jeu disponible"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#2D3748"
                               HorizontalOptions="Center"/>
                        <Label Text="Cliquez sur 'Charger tous les jeux'"
                               FontSize="14"
                               TextColor="#718096"
                               HorizontalOptions="Center"
                               Margin="0,10,0,0"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                
            </CollectionView>
        </ScrollView>
        
    </Grid>
</ContentPage>