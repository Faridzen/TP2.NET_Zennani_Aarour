<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Gauniv.Client.ViewModel"
             xmlns:dto="clr-namespace:Gauniv.Client.Dtos"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Gauniv.Client.Pages.Index"
             Title="Catalogue de Jeux"
             x:DataType="vm:IndexViewModel"
             BackgroundColor="#1b2838">

    <Grid ColumnDefinitions="280,*">
        
        <!-- Panneau de filtres à gauche -->
        <ScrollView Grid.Column="0" BackgroundColor="#171a21" Padding="15">
            <VerticalStackLayout Spacing="20">
                
                <!-- Titre Filtres -->
                <Label Text="FILTRES"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="#c7d5e0"
                       Margin="0,10,0,0"/>

                <!-- Recherche -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Rechercher"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#8f98a0"/>
                    <Frame Padding="0"
                           CornerRadius="3"
                           HasShadow="False"
                           BackgroundColor="#316282"
                           BorderColor="Transparent">
                        <SearchBar Placeholder="Titre du jeu..."
                                  Text="{Binding SearchText}"
                                  PlaceholderColor="#8f98a0"
                                  TextColor="White"
                                  BackgroundColor="Transparent"
                                  CancelButtonColor="#66c0f4"/>
                    </Frame>
                </VerticalStackLayout>

                <!-- Séparateur -->
                <BoxView HeightRequest="1" BackgroundColor="#2a475e"/>

                <!-- Catégories -->
                <toolkit:Expander IsExpanded="True">
                    <toolkit:Expander.Header>
                        <Grid ColumnDefinitions="*,Auto" Padding="0,5">
                            <Label Text="Catégories"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#8f98a0"
                                   VerticalOptions="Center"/>
                            <Label Grid.Column="1" 
                                   Text="▼" 
                                   TextColor="#8f98a0"
                                   VerticalOptions="Center">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" 
                                                 Binding="{Binding Source={RelativeSource AncestorType={x:Type toolkit:Expander}}, Path=IsExpanded}" 
                                                 Value="True">
                                        <Setter Property="Text" Value="▲"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                        </Grid>
                    </toolkit:Expander.Header>
                    <toolkit:Expander.Content>
                        <CollectionView ItemsSource="{Binding CategoryItems}"
                                        SelectionMode="None"
                                        Margin="0,10,0,0">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="vm:CategoryItem">
                                    <Grid ColumnDefinitions="Auto,*" Padding="5,2">
                                        <CheckBox IsChecked="{Binding IsSelected}"
                                                  Color="#66c0f4"/>
                                        <Label Grid.Column="1"
                                               Text="{Binding Name}"
                                               TextColor="#c7d5e0"
                                               FontSize="13"
                                               VerticalOptions="Center"
                                               Margin="5,0,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </toolkit:Expander.Content>
                </toolkit:Expander>

                <!-- Séparateur -->
                <BoxView HeightRequest="1" BackgroundColor="#2a475e"/>

                <!-- Prix -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Prix"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#8f98a0"/>
                    
                    <VerticalStackLayout Spacing="5">
                        <Label Text="{Binding MinPrice, StringFormat='Min: {0:C}'}"
                               FontSize="12"
                               TextColor="#66c0f4"/>
                        <Slider Minimum="0"
                               Maximum="100"
                               Value="{Binding MinPriceSlider}"
                               MinimumTrackColor="#66c0f4"
                               MaximumTrackColor="#2a475e"
                               ThumbColor="#66c0f4"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="{Binding MaxPrice, StringFormat='Max: {0:C}'}"
                               FontSize="12"
                               TextColor="#66c0f4"/>
                        <Slider Minimum="0"
                               Maximum="100"
                               Value="{Binding MaxPriceSlider}"
                               MinimumTrackColor="#66c0f4"
                               MaximumTrackColor="#2a475e"
                               ThumbColor="#66c0f4"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>

                <!-- Séparateur -->
                <BoxView HeightRequest="1" BackgroundColor="#2a475e"/>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Contenu principal -->
        <Grid Grid.Column="1" RowDefinitions="Auto,Auto,*">
            
            <!-- Bannière Moderne -->
            <Grid Grid.Row="0" HeightRequest="180" Margin="0,0,0,10">
                <Frame Padding="0" HasShadow="False" BorderColor="Transparent" CornerRadius="0">
                    <Frame.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#171a21" Offset="0.1" />
                            <GradientStop Color="#2a475e" Offset="0.5" />
                            <GradientStop Color="#1b2838" Offset="0.9" />
                        </LinearGradientBrush>
                    </Frame.Background>
                    
                    <Grid>
                        <!-- Effet de lumière subtil -->
                        <Ellipse Fill="#66c0f4" 
                                 Opacity="0.1" 
                                 WidthRequest="400" 
                                 HeightRequest="400" 
                                 HorizontalOptions="Center" 
                                 VerticalOptions="Center" />
                        
                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="5">
                            <Label Text="GAUNIV"
                                   FontSize="48"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   CharacterSpacing="5">
                                <Label.Shadow>
                                    <Shadow Brush="Black" Offset="2,2" Radius="5" Opacity="0.5" />
                                </Label.Shadow>
                            </Label>
                            
                            <BoxView HeightRequest="2" 
                                     WidthRequest="100" 
                                     Color="#66c0f4" 
                                     HorizontalOptions="Center" />
                            
                            <Label Text="EXPLOREZ VOTRE PROCHAINE AVENTURE"
                                   FontSize="12"
                                   TextColor="#8f98a0"
                                   HorizontalOptions="Center"
                                   CharacterSpacing="2"
                                   Margin="0,5,0,0"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>
            </Grid>

            <!-- Status message -->
            <Label Grid.Row="1"
                   Text="{Binding StatusMessage}"
                   TextColor="#8f98a0"
                   FontSize="13"
                   Padding="20,10"
                   IsVisible="{Binding StatusMessage, Converter={StaticResource IsNotNullConverter}}"/>

            <!-- Loading -->
            <ActivityIndicator Grid.Row="2"
                              IsRunning="{Binding IsLoading}"
                              IsVisible="{Binding IsLoading}"
                              Color="#66c0f4"
                              HeightRequest="60"/>

            <!-- Liste des jeux -->
            <CollectionView Grid.Row="2"
                           ItemsSource="{Binding Games}"
                           SelectionMode="None"
                           Margin="15,10"
                           IsVisible="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                           RemainingItemsThreshold="5"
                           RemainingItemsThresholdReachedCommand="{Binding LoadMoreGamesCommand}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="12"/>
                </CollectionView.ItemsLayout>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="dto:GameDto">
                        <Frame Padding="0"
                               CornerRadius="4"
                               HasShadow="False"
                               BorderColor="Transparent"
                               BackgroundColor="#16202d">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:IndexViewModel}}, Path=ViewGameDetailsCommand}"
                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            
                            <Grid ColumnDefinitions="200,*" Padding="0">
                                
                                <!-- Image placeholder -->
                                <Frame Grid.Column="0"
                                      Padding="0"
                                      CornerRadius="0"
                                      HasShadow="False"
                                      BackgroundColor="#2a475e"
                                      BorderColor="Transparent"
                                      HeightRequest="100">
                                    <Image Source="{Binding ImageUrl}"
                                          Aspect="AspectFill"
                                          HorizontalOptions="Fill"
                                          VerticalOptions="Fill"/>
                                </Frame>
                                
                                <!-- Info du jeu -->
                                <Grid Grid.Column="1" 
                                     RowDefinitions="Auto,*,Auto"
                                     Padding="15,10">
                                    
                                    <!-- Titre -->
                                    <Label Grid.Row="0"
                                          Text="{Binding Title}"
                                          FontSize="18"
                                          FontAttributes="Bold"
                                          TextColor="#c7d5e0"
                                          Margin="0,0,0,5"/>
                                    
                                    <!-- Description -->
                                    <Label Grid.Row="1"
                                          Text="{Binding Description}"
                                          FontSize="13"
                                          TextColor="#8f98a0"
                                          LineBreakMode="WordWrap"
                                          MaxLines="2"
                                          Margin="0,0,0,10"/>
                                    
                                    <!-- Prix et catégories -->
                                    <Grid Grid.Row="2" ColumnDefinitions="*,Auto">
                                        <!-- Catégories -->
                                        <FlexLayout Grid.Column="0"
                                                   BindableLayout.ItemsSource="{Binding Categories}"
                                                   Wrap="Wrap"
                                                   AlignItems="Center">
                                            <BindableLayout.ItemTemplate>
                                                <DataTemplate x:DataType="x:String">
                                                    <Frame Padding="6,3"
                                                          Margin="0,0,5,0"
                                                          CornerRadius="2"
                                                          HasShadow="False"
                                                          BackgroundColor="#1b2838"
                                                          BorderColor="Transparent">
                                                        <Label Text="{Binding .}"
                                                              FontSize="11"
                                                              TextColor="#66c0f4"/>
                                                    </Frame>
                                                </DataTemplate>
                                            </BindableLayout.ItemTemplate>
                                        </FlexLayout>
                                        
                                        <!-- Prix ou Badge "Déjà acheté" -->
                                        <Grid Grid.Column="1" VerticalOptions="Center" IsVisible="{Binding Source={RelativeSource AncestorType={x:Type vm:IndexViewModel}}, Path=IsNotAdmin}">
                                            <!-- Prix (si pas possédé) -->
                                            <Label Text="{Binding Price, StringFormat='{0:C}'}"
                                                  FontSize="18"
                                                  FontAttributes="Bold"
                                                  TextColor="#beee11"
                                                  VerticalOptions="Center">
                                                <Label.Triggers>
                                                    <DataTrigger TargetType="Label" Binding="{Binding IsOwned}" Value="True">
                                                        <Setter Property="IsVisible" Value="False"/>
                                                    </DataTrigger>
                                                </Label.Triggers>
                                            </Label>
                                            
                                            <Frame Padding="8,4"
                                                   BackgroundColor="#4c6b22"
                                                   CornerRadius="2"
                                                   HasShadow="False"
                                                   BorderColor="Transparent"
                                                   IsVisible="False"
                                                   HorizontalOptions="End">
                                                <Frame.Triggers>
                                                    <DataTrigger TargetType="Frame" Binding="{Binding IsOwned}" Value="True">
                                                        <Setter Property="IsVisible" Value="True"/>
                                                    </DataTrigger>
                                                </Frame.Triggers>
                                                <Label Text="DÉJÀ ACHETÉ"
                                                       FontSize="11"
                                                       FontAttributes="Bold"
                                                       TextColor="#beee11"/>
                                            </Frame>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </Grid>
</ContentPage>