                    <Label Text="Votre nouveau jeu est prÃªt Ã  Ãªtre tÃ©lÃ©chargÃ©."
                           FontSize="16"
                           TextColor="#8f98a0"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>

                <!-- Game Card -->
                <Frame Padding="0" 
                       CornerRadius="8" 
                       HasShadow="True" 
                       BorderColor="#66c0f4"
                       BackgroundColor="#16202d"
                       HeightRequest="300">
                    <Grid RowDefinitions="*,Auto">
                        <!-- Game Image -->
                        <Image Grid.Row="0"
                               Source="{Binding Game.ImageUrl}"
                               Aspect="AspectFill"/>
                        
                        <!-- Game Title Overlay -->
                        <BoxView Grid.Row="1" HeightRequest="60" Color="#1b2838" Opacity="0.9"/>
                        <Label Grid.Row="1"
                               Text="{Binding Game.Title}"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="White"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               Padding="15,0"/>
