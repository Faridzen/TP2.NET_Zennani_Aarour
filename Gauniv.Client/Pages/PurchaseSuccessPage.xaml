    <Grid>
        <!-- Background Gradient -->
        <BoxView>
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1b2838" Offset="0.1" />
                    <GradientStop Color="#2a475e" Offset="0.5" />
                    <GradientStop Color="#171a21" Offset="0.9" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <ScrollView VerticalOptions="Center">
            <VerticalStackLayout Padding="30" Spacing="30" HorizontalOptions="Center" MaximumWidthRequest="600">
                
                <!-- Success Icon & Message -->
                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
