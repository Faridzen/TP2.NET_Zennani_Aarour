<?xml version="1.0" encoding="utf-8" ?>
<!--
EXEMPLE SIMPLE D'UTILISATION - Page Index avec boutons de test
Vous pouvez copier ce contenu dans votre Index.xaml pour tester rapidement
-->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Gauniv.Client.ViewModel"
             x:Class="Gauniv.Client.Pages.Index"
             Title="Liste des Jeux"
             x:DataType="vm:IndexViewModel">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            
            <!-- Message de statut -->
            <Label Text="{Binding StatusMessage}" 
                   FontSize="16"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>
            
            <!-- Indicateur de chargement -->
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                              IsVisible="{Binding IsLoading}"
                              Color="Blue"
                              HeightRequest="50"/>
            
            <!-- Boutons d'action -->
            <Button Text="ðŸ“‹ Charger TOUS les jeux (sans connexion)"
                    Command="{Binding LoadGamesCommand}"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                    BackgroundColor="DodgerBlue"
                    TextColor="White"
                    Margin="0,10,0,0"/>
            
            <Button Text="ðŸ” Se connecter et voir MES jeux"
                    Command="{Binding LoadMyGamesCommand}"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                    BackgroundColor="Green"
                    TextColor="White"/>
            
            <!-- Liste des jeux -->
            <Label Text="Jeux disponibles :" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   Margin="0,20,0,10"/>
            
            <CollectionView ItemsSource="{Binding Games}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:GameDto">
                        <Frame Padding="10" Margin="0,5" BorderColor="LightGray">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="{Binding Title}" 
                                       FontSize="16" 
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding Description}" 
                                       FontSize="12" 
                                       TextColor="Gray"/>
                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="{Binding Price, StringFormat='Prix: {0:C}'}" 
                                           FontSize="14" 
                                           FontAttributes="Bold"
                                           TextColor="Green"/>
                                    <Label Text="{Binding Categories, StringFormat='CatÃ©gories: {0}'}" 
                                           FontSize="12" 
                                           TextColor="DarkBlue"/>
                                </HorizontalStackLayout>
                                
                                <!-- Bouton acheter -->
                                <Button Text="ðŸ’° Acheter ce jeu"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:IndexViewModel}}, Path=PurchaseGameCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="Orange"
                                        TextColor="White"
                                        FontSize="12"
                                        Padding="5"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
